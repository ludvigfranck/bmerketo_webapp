@model GridCollectionItemViewModel

<a asp-controller="products" asp-action="details" asp-route-articleNumber="@Model.ArticleNumber" class="collection-item">
    @if (Model.ImageUrl != null)
    {
        <img src="@Model.ImageUrl" alt="@Model.ProductName">
    }
    else
    {
        <img src="./images/placeholders/270x295.svg" alt="@Model.ProductName" />
    }
    <div class="body">
        <div class="title">@Model.ProductName</div>
        <div class="info">
            <div class="price">$@Model.ProductPrice</div>
            <i class="add-cart fa-regular fa-cart-plus"></i>
        </div>
    </div>
</a>
