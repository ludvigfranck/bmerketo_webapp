@model SignInFormViewModel

<section class="login-form">
    <div class="container">
        <div class="title">Login to your'e Account</div>

        <form method="post" novalidate>
            <div class="email form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="email" required>
                <span asp-validation-for="Email" class="error"></span>
            </div>
            <div class="password form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" id="password">
                <span asp-validation-for="Password" class="error"></span>
            </div>
            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    Remember Me.
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="register form-group">
                <span>Dont have an Account yet?</span>
                <a asp-action="index" asp-controller="signup">Register Here!</a>
            </div>
            <div class="summary">
                <div class="error" asp-validation-summary="ModelOnly"></div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn-theme">Login</button>
            </div>
        </form>
    </div>
</section>
